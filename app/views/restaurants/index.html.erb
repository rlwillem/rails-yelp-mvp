<h1>Restaurants</h1>

<ul>
  <% @restaurants.each do |restaurant| %>
  <li>
    <%=link_to restaurant.name, restaurant_path(restaurant) %>
    <br>
    <%= restaurant.address %>
    <br>
    <%= restaurant.category %>
  </li>
 <% end %>
</ul>

<%= link_to "Add a new restaurant", new_restaurant_path  %>
